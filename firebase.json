{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "functions/**"
    ],
    "redirects": [
      { "source": "/codes", "destination": "/codes.html", "type": 301 },
      { "source": "/speedtest", "destination": "/speedtest.html", "type": 301 }
    ],
    "rewrites": [
      { "source": "/api/**", "function": "api" },
      { "source": "**", "destination": "/index.html" }
    ],
    "headers": [
      {
        "source": "**/*.@(css|js)",
        "headers": [
          { "key": "Cache-Control", "value": "max-age=31536000" }
        ]
      }
    ]
  },
  "emulators": {
    "functions": { "host": "127.0.0.1", "port": 5199, "inspectFunctions": true },
    "hosting": { "host": "127.0.0.1", "port": 61130 },
    "ui": { "enabled": false }
  }
}